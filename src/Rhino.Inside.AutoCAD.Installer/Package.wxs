<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
	<Package
		Name="$(var.AppName) V$(var.AppVersion)"
		Manufacturer="$(var.CompanyName)"
		Version="$(var.AppVersion)"
		UpgradeCode="$(var.UpgradeCode)"
		InstallerVersion="500"
		Compressed="yes">

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

		<Icon Id="InstallerIcon" SourceFile="..\Rhino.Inside.AutoCAD.Applications\Icons\RhinoInsideLogo.ico" />
		<Property Id="ARPPRODUCTICON" Value="InstallerIcon" />

		<Feature Id="Main">
			<ComponentRef Id="PackageContentsFile" />
			<ComponentRef Id="IconFiles"/>
			<ComponentRef Id="Resources" />
			<ComponentRef Id="Toolbar" />
			<ComponentRef Id="Net48" />
			<ComponentRef Id="Net8" />
		</Feature>

		<ui:WixUI
			Id="WixUI_Minimal"
			InstallDirectory="INSTALLDIR">
		</ui:WixUI>

		<WixVariable
			Id="WixUILicenseRtf"
			Value="Terms.rtf"/>
	</Package>
</Wix>