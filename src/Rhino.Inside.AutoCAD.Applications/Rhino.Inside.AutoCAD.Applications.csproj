<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>$(TargetFrameworkName)</TargetFramework>
		<Configurations>Release;Debug;ReleaseNET8;DebugNET8</Configurations>
		<ImplicitUsings>enable</ImplicitUsings>
		<OutputType>Library</OutputType>
		<Nullable>enable</Nullable>
		<LangVersion>preview</LangVersion>
		<Version>$(AssemblyVersion)</Version>
		<Company>$(BimorphCompany)</Company>
		<Product>$(BimorphProduct)</Product>
		<Copyright>$(BimorphCopyright)</Copyright>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<ProduceReferenceAssembly>True</ProduceReferenceAssembly>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Properties\**" />
	  <EmbeddedResource Remove="Properties\**" />
	  <None Remove="Properties\**" />
	  <Page Remove="Properties\**" />
	</ItemGroup>

  
  <ItemGroup>
    <None Remove="Icons\Large512\Grasshopper_Preview_Off.png" />
    <None Remove="Icons\Large512\Grasshopper_Preview_Off_Selected.png" />
    <None Remove="Icons\Large512\Grasshopper_Preview_Shaded.png" />
    <None Remove="Icons\Large512\Grasshopper_Preview_Shaded_Selected.png" />
    <None Remove="Icons\Large512\Grasshopper_Preview_Wireframe.png" />
    <None Remove="Icons\Large512\Grasshopper_Preview_Wireframe_Selected.png" />
    <None Remove="Icons\Large512\Grasshopper_SolverOff.png" />
    <None Remove="Icons\Large512\Grasshopper_SolverOn.png" />
    <None Remove="Icons\Large512\Rhinoceros_Preview_Off.png" />
    <None Remove="Icons\Large512\Rhinoceros_Preview_Shaded.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AutoCAD.NET.Core">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Grasshopper">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="MaterialDesignThemes" />
    <PackageReference Include="RhinoCommon">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="System.Text.Json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.Core\Rhino.Inside.AutoCAD.Core.csproj">
      <Private>False</Private>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.Interop\Rhino.Inside.AutoCAD.Interop.csproj">
      <Private>False</Private>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.Services\Rhino.Inside.AutoCAD.Services.csproj">
      <ExcludeAssets>runtime</ExcludeAssets>
      <Private>False</Private>
    </ProjectReference>
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.UI.Resources\Rhino.Inside.AutoCAD.UI.Resources.csproj">
      <Private>False</Private>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Icons\Large512\Grasshopper_Preview_Wireframe.png">
      <CopyToOutputDirectory></CopyToOutputDirectory>
    </Resource>
    <Resource Include="Icons\Large512\Grasshopper_Preview_Wireframe_Selected.png">
      <CopyToOutputDirectory></CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Icons\Large512\Grasshopper_Preview_Off.png">
      <CopyToOutputDirectory></CopyToOutputDirectory>
    </Resource>
    <Resource Include="Icons\Large512\Grasshopper_Preview_Off_Selected.png" />
    <Resource Include="Icons\Large512\Grasshopper_Preview_Shaded.png">
      <CopyToOutputDirectory></CopyToOutputDirectory>
    </Resource>
    <Resource Include="Icons\Large512\Grasshopper_Preview_Shaded_Selected.png" />
    <Resource Include="Icons\Large512\Grasshopper_SolverOff.png">
      <CopyToOutputDirectory></CopyToOutputDirectory>
    </Resource>
    <Resource Include="Icons\Large512\Grasshopper_SolverOn.png">
      <CopyToOutputDirectory></CopyToOutputDirectory>
    </Resource>
    <Resource Include="Icons\Large512\Rhinoceros_Preview_Off.png" />
    <Resource Include="Icons\Large512\Rhinoceros_Preview_Shaded.png" />
  </ItemGroup>

  <PropertyGroup Condition="$(Configuration) == 'Debug' AND $([MSBuild]::IsOSPlatform(Windows))">
    <StartProgram>C:\Program Files\Autodesk\AutoCAD 2024\acad.exe</StartProgram>
    <StartArguments></StartArguments>
    <StartAction>Program</StartAction>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /y /i &quot;$(OutDir)*.dll&quot; &quot;$(AppRootDirAssemblies)&quot;&#xD;&#xA;xcopy /y /i &quot;$(OutDir)*.pdb&quot; &quot;$(AppRootDirAssemblies)&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\*.*&quot; &quot;$(AppRootDir)Icons\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\Small32\*.*&quot; &quot;$(AppRootDir)Icons\Small32\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\Large512\*.*&quot; &quot;$(AppRootDir)Icons\Large512\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Toolbar\RhinoInsideAutocad_Toolbar_NET48.cuix&quot; &quot;$(AppRootDir)Toolbar\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Toolbar\RhinoInsideAutocad_Toolbar_NET8.cuix&quot; &quot;$(AppRootDir)Toolbar\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)PackageContents.xml&quot; &quot;$(AppRootDir)&quot;&#xD;&#xA;&#xD;&#xA;xcopy /y /i &quot;$(OutDir)*.dll&quot; &quot;$(DeploymentPackage_Win64)&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\*.*&quot; &quot;$(DeploymentPackage)Icons\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\Small32\*.*&quot; &quot;$(DeploymentPackage)Icons\Small32\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\Large512\*.*&quot; &quot;$(DeploymentPackage)Icons\Large512\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Toolbar\RhinoInsideAutocad_Toolbar_NET48.cuix&quot; &quot;$(DeploymentPackage)Toolbar\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Toolbar\RhinoInsideAutocad_Toolbar_NET8.cuix&quot; &quot;$(DeploymentPackage)Toolbar\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)PackageContents.xml&quot; &quot;$(DeploymentPackage)&quot;" />
  </Target>


	<PropertyGroup>
		<SourceRevisionId>build$([System.DateTime]::UtcNow.ToString("yyyyMMddHHmmss"))</SourceRevisionId>
	</PropertyGroup>

</Project>
