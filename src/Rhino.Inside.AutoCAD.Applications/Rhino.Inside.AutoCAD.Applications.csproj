<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>$(Framework)</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<OutputType>Library</OutputType>
		<Nullable>enable</Nullable>
		<LangVersion>preview</LangVersion>
		<Version>$(AssemblyVersion)</Version>
		<Company>$(BimorphCompany)</Company>
		<Product>$(BimorphProduct)</Product>
		<Copyright>$(BimorphCopyright)</Copyright>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<ProduceReferenceAssembly>True</ProduceReferenceAssembly>
	</PropertyGroup>

  <ItemGroup>
    <Compile Remove="Model\Infrastructure\**" />
    <Compile Remove="Model\Ribbon Menu\**" />
    <Compile Remove="Model\UI\**" />
    <EmbeddedResource Remove="Model\Infrastructure\**" />
    <EmbeddedResource Remove="Model\Ribbon Menu\**" />
    <EmbeddedResource Remove="Model\UI\**" />
    <None Remove="Model\Infrastructure\**" />
    <None Remove="Model\Ribbon Menu\**" />
    <None Remove="Model\UI\**" />
    <Page Remove="Model\Infrastructure\**" />
    <Page Remove="Model\Ribbon Menu\**" />
    <Page Remove="Model\UI\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AutoCAD.NET.Core">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Autofac" />
    <PackageReference Include="Grasshopper">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="MaterialDesignThemes" />
    <PackageReference Include="RhinoCommon">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="System.Text.Json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.Core\Rhino.Inside.AutoCAD.Core.csproj" />
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.GrasshopperLauncher\Rhino.Inside.AutoCAD.GrasshopperLauncher.csproj" />
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.Interop\Rhino.Inside.AutoCAD.Interop.csproj" />
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.RhinoLauncher\Rhino.Inside.AutoCAD.RhinoLauncher.csproj" />
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.Services\Rhino.Inside.AutoCAD.Services.csproj" />
    <ProjectReference Include="..\Rhino.Inside.AutoCAD.UI.Resources\Rhino.Inside.AutoCAD.UI.Resources.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
    <Folder Include="Toolbar\" />
  </ItemGroup>

  <PropertyGroup Condition="$(Configuration) == 'Debug' AND $([MSBuild]::IsOSPlatform(Windows))">
    <StartProgram>C:\Program Files\Autodesk\AutoCAD 2024\acad.exe</StartProgram>
    <StartArguments></StartArguments>
    <StartAction>Program</StartAction>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /y /i &quot;$(OutDir)*.dll&quot; &quot;$(AppRootDirAssemblies)&quot;&#xD;&#xA;xcopy /y /i &quot;$(OutDir)*.pdb&quot; &quot;$(AppRootDirAssemblies)&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\*.*&quot; &quot;$(AppRootDir)Icons\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\Small32\*.*&quot; &quot;$(AppRootDir)Icons\Small32\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\Large512\*.*&quot; &quot;$(AppRootDir)Icons\Large512\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Toolbar\RhinoInsideAutocad_Toolbar.cuix&quot; &quot;$(AppRootDir)Toolbar\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)PackageContents.xml&quot; &quot;$(AppRootDir)&quot;&#xD;&#xA;&#xD;&#xA;xcopy /y /i &quot;$(OutDir)*.dll&quot; &quot;$(DeploymentPackage_Win64)&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\*.*&quot; &quot;$(DeploymentPackage)Icons\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\Small32\*.*&quot; &quot;$(DeploymentPackage)Icons\Small32\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Icons\Large512\*.*&quot; &quot;$(DeploymentPackage)Icons\Large512\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)Toolbar\RhinoInsideAutocad_Toolbar.cuix&quot; &quot;$(DeploymentPackage)Toolbar\&quot;&#xD;&#xA;xcopy /y /i &quot;$(ProjDir)PackageContents.xml&quot; &quot;$(DeploymentPackage)&quot;" />
  </Target>

</Project>
